<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_despesa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teca.dudu.triptogether.activity.DespesaActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="left|center_vertical"
        android:layout_below = "@+id/ad_valor_txt"
        android:id="@+id/list_usuarios"
        android:choiceMode="multipleChoiceModal" />

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/agua72"
        android:id="@+id/imagem_despesa"
        android:layout_width="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Valor: "
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ad_valor_txt"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_alignLeft="@+id/ad_nome_itemdespesa"
        android:layout_alignStart="@+id/ad_nome_itemdespesa"
        android:layout_below="@+id/ad_nome_itemdespesa"
        android:layout_marginTop="30dp"/>

    <TextView
        android:text="Nome da Despesa"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ad_nome_itemdespesa"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imagem_despesa"
        android:layout_toEndOf="@+id/imagem_despesa" />


</RelativeLayout>
